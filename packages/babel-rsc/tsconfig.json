{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "lib": ["es2022", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.cts"],
  "exclude": ["**/__tests__/**"]
}
