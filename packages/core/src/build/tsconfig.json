{
  "include": ["**/*.ts", "**/*.tsx", "**/*.cts"],
  "exclude": ["**/__tests__/*"],
  "compilerOptions": {
    "outDir": "../../dist/build",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
