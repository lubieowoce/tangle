{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "outDir": "../../dist/runtime",
    "declaration": true,
    "target": "ESNext",
    "module": "ES2022",
    "lib": ["es2022", "DOM"],
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "../../../../types",
      "../../node_modules/@types",
      "../../../../node_modules/@types"
    ]
  }
}
