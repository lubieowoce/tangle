{
  "private": true,
  "description": "",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "example": "npm run -w examples/demo-1 dev",
    "example:prod": "NODE_ENV=production npm run -w examples/demo-1 dev",
    "build": "turbo run build --filter './packages/core' --filter './packages/router'",
    "watch": "turbo run watch --filter './packages/core' --filter './packages/router'",
    "clean": "find . -name dist -type d -not -path './node_modules/*' -exec rm -rf {} +",
    "install-links": "npm ci",
    "changeset": "changeset add",
    "version": "changeset version",
    "publish": "changeset publish",
    "release-all": "npm run clean && npm run build && npm run version && npm install && git add . && git commit -m 'chore: release' && npm run publish && git push"
  },
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "tsup": "^6.6.3",
    "tsx": "^3.12.6",
    "turbo": "^1.9.3"
  }
}
