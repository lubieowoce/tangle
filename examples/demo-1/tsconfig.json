{
  "include": ["src/**/*.ts", "src/**/*.tsx", "tangle.config.cjs"],
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "target": "ESNext",
    "module": "ES2022",
    "lib": ["es2022", "DOM"],
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  }
}
